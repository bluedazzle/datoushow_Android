<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:title="">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/title_share"
                android:textColor="@color/colorLightGray"
                android:textSize="16sp"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- 不知道为什么如果这里设置成vertical的话其weightSum就不起作用了，所以进行了更多嵌套-->
                <com.lypeer.zybuluo.ui.custom.RatioLayout
                    android:id="@+id/lly_meipai"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:clickable="true"
                    android:gravity="center"
                    android:weightSum="2"
                    app:ratio="1">


                    <com.lypeer.zybuluo.ui.custom.RatioLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:ratio="2">

                        <com.lypeer.zybuluo.ui.custom.RatioLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:ratio="1">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_meipai"/>
                        </com.lypeer.zybuluo.ui.custom.RatioLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/meipai"/>
                    </com.lypeer.zybuluo.ui.custom.RatioLayout>


                </com.lypeer.zybuluo.ui.custom.RatioLayout>

                <com.lypeer.zybuluo.ui.custom.RatioLayout
                    android:id="@+id/lly_weibo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:clickable="true"
                    android:gravity="center"
                    android:weightSum="2"
                    app:ratio="1">


                    <com.lypeer.zybuluo.ui.custom.RatioLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:ratio="2">

                        <com.lypeer.zybuluo.ui.custom.RatioLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:ratio="1">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerInside"
                                android:src="@drawable/ssdk_oks_classic_sinaweibo"/>
                        </com.lypeer.zybuluo.ui.custom.RatioLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ssdk_sinaweibo"/>
                    </com.lypeer.zybuluo.ui.custom.RatioLayout>


                </com.lypeer.zybuluo.ui.custom.RatioLayout>

                <com.lypeer.zybuluo.ui.custom.RatioLayout
                    android:id="@+id/lly_wechat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:clickable="true"
                    android:gravity="center"
                    android:weightSum="2"
                    app:ratio="1">


                    <com.lypeer.zybuluo.ui.custom.RatioLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:ratio="2">

                        <com.lypeer.zybuluo.ui.custom.RatioLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:ratio="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerInside"
                                android:src="@drawable/ssdk_oks_classic_wechat"/>
                        </com.lypeer.zybuluo.ui.custom.RatioLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ssdk_wechat"/>
                    </com.lypeer.zybuluo.ui.custom.RatioLayout>


                </com.lypeer.zybuluo.ui.custom.RatioLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- 不知道为什么如果这里设置成vertical的话其weightSum就不起作用了，所以进行了更多嵌套-->
                <com.lypeer.zybuluo.ui.custom.RatioLayout
                    android:id="@+id/lly_comment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:clickable="true"
                    android:gravity="center"
                    android:weightSum="2"
                    app:ratio="1">


                    <com.lypeer.zybuluo.ui.custom.RatioLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:ratio="2">

                        <com.lypeer.zybuluo.ui.custom.RatioLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:ratio="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerInside"
                                android:src="@drawable/ssdk_oks_classic_wechatmoments"/>
                        </com.lypeer.zybuluo.ui.custom.RatioLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ssdk_wechatmoments"/>
                    </com.lypeer.zybuluo.ui.custom.RatioLayout>


                </com.lypeer.zybuluo.ui.custom.RatioLayout>

                <com.lypeer.zybuluo.ui.custom.RatioLayout
                    android:id="@+id/lly_qq"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:clickable="true"
                    android:gravity="center"
                    android:weightSum="2"
                    app:ratio="1">


                    <com.lypeer.zybuluo.ui.custom.RatioLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:ratio="2">

                        <com.lypeer.zybuluo.ui.custom.RatioLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:ratio="1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerInside"
                                android:src="@drawable/ssdk_oks_classic_qq"/>
                        </com.lypeer.zybuluo.ui.custom.RatioLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ssdk_qq"/>
                    </com.lypeer.zybuluo.ui.custom.RatioLayout>


                </com.lypeer.zybuluo.ui.custom.RatioLayout>

                <com.lypeer.zybuluo.ui.custom.RatioLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:weightSum="2"
                    app:ratio="1">

                </com.lypeer.zybuluo.ui.custom.RatioLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="64dp"
                android:gravity="center"
                android:text="@string/prompt_share_anytime"
                android:textColor="@color/colorGray"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:id="@+id/btn_back"
                android:layout_marginRight="32dp"
                android:background="@drawable/bg_rc_red"
                android:text="@string/prompt_back"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>